pipeline {
    agent any

    environment {
        BUILD_TYPE = 'Release'
    }

    stages {
        stage('Build') {
            steps {
                echo "Build type: ${env.BUILD_TYPE}"
            }
        }
        stage('Test') {
            steps {
                echo 'Test passed!'
            }
        }
        stage('Deploy') {
            when {
                expression {
                    return env.BUILD_NUMBER.toInteger() % 2 != 0
                }
            }
            steps {
                echo "ðŸš€ Deploy executed on odd build number: ${env.BUILD_NUMBER}"
            }
        }
    }
}
