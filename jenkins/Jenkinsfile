pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Compilation in progress...'
                sh 'exit 1'
            }
        }
    }
    post {
        always {
            echo 'The build has finished'
        }
        success {
            echo 'The build was successful'
        }
        failure {
            echo 'The build failed'
        }
    }
}
