pipeline {
    agent any

    stages {
        stage('Test Matrix') {
            matrix {
                axes {
                    axis {
                        name 'PYTHON_VERSION'
                        values '3.8', '3.9', '3.10'
                    }
                }
                stages {
                    stage('Run Test') {
                        steps {
                            echo "Running tests for Python version: ${PYTHON_VERSION}"
                        }
                    }
                }
            }
        }
    }
}
